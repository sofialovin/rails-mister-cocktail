

<%= simple_form_for [ @cocktail ] do |f| %>

<div class="form-inputs">
  <%= f.input :name %>
  <%= f.input :photo, as: :file %>
</div>

<div class="form-actions">
  <%= f.submit "Add new cocktail", class: "btn btn-ghost"%>
</div>
<% end %>


<%= link_to 'Back to list', cocktails_path, class: "btn btn-ghost" %>
